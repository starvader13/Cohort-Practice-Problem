generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:ashutoshpassword@localhost:5432/postgres"
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  firstname String
  lastname String?
  password String
}

model Todos {
  id Int @id @default(autoincrement())
  title String
  description String
  isCompleted Boolean @default(false)
  userId Int
}
